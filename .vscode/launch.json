    "version": "0.2.0",
    "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "-u",
            "bdd",
            "--timeout",
            "999999",
            "--colors",
            "${workspaceFolder}/test"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": [
            "<node_internals>/**"
        ]
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Single Fragment Test",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "-u",
            "bdd",
            "--timeout",
            "999999",
            "--colors",
            "${workspaceFolder}/test/imports-xml.spec.js"
        ],
        "env": {
            "fragment": "imports-nested-fragment"
        },
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": [
            "<node_internals>/**"
        ]
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Just Schema Test",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "-u",
            "bdd",
            "--timeout",
            "999999",
            "--colors",
            "${workspaceFolder}/test/mission-schema.spec.js"
        ],
        "env": {
            "fragment": "imports-nested-fragment"
        },
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": [
            "<node_internals>/**"
        ]
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Single Module Test",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "-u",
            "bdd",
            "--timeout",
            "999999",
            "--colors",
            "${workspaceFolder}/test/expand-modular.spec.js"
        ],
        "env": {
            "xxxfragment": "imports-nested-fragment"
        },
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": [
            "<node_internals>/**"
        ]
    },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\test-fast.js"
        }
    ]
}