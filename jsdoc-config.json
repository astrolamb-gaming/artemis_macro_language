{
    "plugins": ["plugins/markdown"],
    "source": {
        "includePattern": ".+\\.js(doc|x)?$",  
        "include": ["./lib"],                      
        "exclude": ["node_modules"]
    },
    "recurseDepth": 10,     
    "opts": {
        "destination": "./docs/code/",
        "recurse": true
    }
}