<mission_data version="1.0">
  <templates>
    <template name="test">
        <repeat _range="${r}">
          <set_variable name="${Ships.ship}" value="1.0"/>
        </repeat>
    </template>
  </templates>
  <values>
    <range name="Ships">
      <struct>
        <value ship="Artemis" />
        <range name="Fighters">
          <value pilot="Alta" hero="true" />
          <value pilot="Nimbus" hero="true" />
        </range>
      </struct>
      <struct>
        <value ship="Interpid" />
        <range name="Fighters">
          <value pilot="Remy" hero="true" />
          <value pilot="Jango" hero="true" />
        </range>
      </struct>

    </range>
  </values>

  <start>

    <repeat _range="Ships">
      <set_variable name="${Ships.ship}" value="1.0"/>

      <repeat _range="Fighters">
        <set_variable name="${Fighters.pilot}" value="2.0"/>
      </repeat>
    </repeat>
    <expand _template="test" r="Ships" />
      
    
  </start>


</mission_data>