    <repeat _range="fleet">
        <event name="Spawn Bonus ${name}">
            <if_variable name="${name}" comparator="EQUALS" value="0"/>
            <repeat _range="triggers">
                <if_not_exists name="${trigger}"/>
            </repeat>

            <incoming_comms_text from="Enemy Fleet">
      Congratulations, Artemis. You collected all of the ${collect}. We are sending a bonus fleet for you to fight.
            </incoming_comms_text>
            <repeat _range="enemies">
                <create type="enemy" x="${x}" y="${y}" z="${z}" angle="200" name="${name}" raceKeys="${race} enemy" hullKeys="${hull} ${size}" fleetnumber="${fleet.number}"/>
            </repeat>
            <repeat _range="abilities">
                <expand _skip="${match!=='captain'}">
                    <set_special name="${enemies[0].name}" ship="-1" captain="5" ability="${ability}"/>
                </expand>
                <expand _skip="${match!=='clear'}">
                    <set_special name="${enemies[0].name}" clear="yes" ability="${ability}"/>
                </expand>
                <expand _skip="${match!=='on'}">
                    <set_special name="${enemies[0].name}" ability="${ability}"/>
                </expand>
            </repeat>
            <set_variable name="${name}" value="1"/>
        </event>
        <repeat _range="enemies">
            <expand _template="tonnage" fleetID="${fleet.name}" />
        </repeat>
    </repeat>
